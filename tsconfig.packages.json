{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "composite": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": [
      "es2019",
      "es2020.bigint",
      "es2020.string",
      "es2020.symbol.wellknown",
      "dom"
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es2019",
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "inlineSources": true
  }
}
