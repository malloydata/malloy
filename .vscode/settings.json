{
  // vscode-jest-runner doesn't support jest's `projects` config.
  // Map test files to simpler configs so the extension's run buttons appear.
  "jestrunner.configPath": {
    "**/*.spec.ts": "./jest.config.simple.ts"
  },
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/node_modules": true,
    "**/*.tsbuildinfo": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "[antlr]": {
    "editor.insertSpaces": true
  },
  "[markdown]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 4
  },
  "cSpell.words": ["antlr", "pretranslated"],
  "typescript.tsdk": "node_modules/typescript/lib",
  "task.allowAutomaticTasks": "on"
}
