// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run VSCode Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/malloy-vscode"
      ],
      "skipFiles": ["${workspaceFolder}/node_modules/**/*.js"],
      "preLaunchTask": "build-extension-task",
      "sourceMaps": true,
      "console": "integratedTerminal",
      "runtimeArgs": ["--preserve-symlinks"]
    },
    {
      "name": "Run VSCode Extension (and Debug Webviews)",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/malloy-vscode"
      ],
      "debugWebviews": true,
      "skipFiles": ["${workspaceFolder}/node_modules/**/*.js"],
      "preLaunchTask": "build-extension-task",
      "sourceMaps": true,
      "console": "integratedTerminal",
      "runtimeArgs": ["--preserve-symlinks"]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to VSCode Language Server",
      "port": 6009,
      "restart": true,
      "outFiles": ["${workspaceRoot}/packages/malloy-vscode/dist/server.js"]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to VSCode Worker",
      "port": 60010,
      "restart": true,
      "outFiles": ["${workspaceRoot}/packages/malloy-vscode/dist/worker.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Composer Server",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/ts-node",
      "cwd": "${workspaceRoot}/demo/malloy-demo-composer",
      "program": "./scripts/serve.ts"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Composer",
      "preLaunchTask": "build-composer-task",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
      "program": "${workspaceRoot}/demo/malloy-demo-composer/src",
      "runtimeArgs": [
        "${workspaceRoot}/demo/malloy-demo-composer",
        // this args for attaching render process
        "--remote-debugging-port=7151"
      ],
      "windows": {
        "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
      },
      "protocol": "legacy"
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach to Composer Render Process",
      "port": 7151,
      "webRoot": "${workspaceRoot}/html"
    }
  ]
}
