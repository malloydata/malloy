{
  "name": "malloy-composer-demo",
  "description": "Run/Explore/Build Malloy Data Models",
  "version": "0.0.0",
  "private": true,
  "main": "./build/main.js",
  "author": "Malloy",
  "license": "GPL-2.0",
  "scripts": {
    "start": "npm run build && concurrently --kill-others \"npm run start-app\" \"wait-on tcp:3000 && sleep 1 && electron .\"",
    "start-app": "ts-node scripts/serve",
    "build": "ts-node scripts/build",
    "package": "ts-node scripts/package",
    "debug-package": "open ./dist/malloy-composer-demo-darwin-x64/malloy-composer-demo.app/ --args --remote-debugging-port=8315 && node -e \"const x=require('react-dev-utils/openBrowser');x('http://localhost:8315')\"",
    "package-linux": "ts-node scripts/package linux x64",
    "debian": "electron-installer-debian --src dist//malloy-composer-demo-linux-x64/ --dest dist/installers/ --arch amd64",
    "clean": "rm -rf ./node_modules",
    "server-build": "npm run build && npx tsc -p tsconfig.server.json",
    "server-start": "npm run build-server && node ./dist/server/cli.js",
    "server-package": "npm run server-build && npx pkg -c package.json dist/server/cli.js"
  },
  "dependencies": {
    "@malloydata/db-bigquery": "*",
    "@malloydata/db-duckdb": "*",
    "@malloydata/db-postgres": "*",
    "@malloydata/malloy": "*",
    "@malloydata/render": "*",
    "@popperjs/core": "^2.11.4",
    "cors": "^2.8.5",
    "electron": "^18.2.3",
    "moment-js": "^1.1.15",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hotkeys": "^2.0.0",
    "react-popper": "^2.2.5",
    "react-query": "^3.34.16",
    "remark-directive": "^2.0.1",
    "remark-parse": "^10.0.1",
    "shiki": "^0.10.1",
    "styled-components": "^5.3.3",
    "unified": "^10.1.2",
    "url": "^0.11.0",
    "web-vitals": "^2.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/moment": "^2.13.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/styled-components": "^5.1.19",
    "commander": "^9.4.0",
    "concurrently": "^6.2.1",
    "electron-packager": "^15.5.1",
    "esbuild": "0.14.13",
    "esbuild-plugin-svgr": "^1.0.1",
    "pkg": "^5.8.0",
    "wait-on": "^6.0.1"
  },
  "optionalDependencies": {
    "electron-installer-debian": "^3.1.0"
  },
  "pkg": {
    "scripts": [
      "dist/server/cli.js"
    ],
    "assets": [
      "dist/**/*",
      "build/**/*"
    ],
    "targets": [
      "node16-linux-x64",
      "node16-macos-x64",
      "node16-macos-arm64"
    ],
    "outputPath": "pkg",
    "compress": "GZip"
  }
}
